<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ItemToSellDetailsActivity"
   >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemToSellDetailsActivity">


    <HorizontalScrollView
        android:id="@+id/id_fr_horizontal_scrll_view"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#AAA5A5"
        android:padding="10dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal"

        >


    <ImageView
        android:id="@+id/id_fr_slected_image_1"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:visibility="gone"/>
        <ImageView
            android:id="@+id/id_fr_slected_image_2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/id_fr_slected_image_3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/id_fr_slected_image_4"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/id_fr_slected_image_5"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:visibility="gone" />

    <Button
        android:id="@+id/id_fr_bt_choose_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="choose images" />


    </LinearLayout>
    </HorizontalScrollView>
//--------------------------------

    <ScrollView
        android:layout_below="@id/id_fr_horizontal_scrll_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


                <EditText
                    android:id="@+id/ed_fr_Item_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@layout/rounded_border_edittext"
                    android:hint="Item name"
                    android:layout_marginTop="15dp"

                   />

                <EditText
                    android:id="@+id/ed_fr_Item_price"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@layout/rounded_border_edittext"
                    android:inputType="number"
                    android:hint="Item price(in Rs.)"
                    android:layout_marginTop="15dp"
              />

                <EditText
                    android:id="@+id/ed_fr_item_descrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@layout/rounded_border_edittext"
                    android:hint="Item description"
                android:minHeight="60dp"
                    android:maxHeight="160dp"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="15dp"
                />



            <Button
                android:id="@+id/id_fr_bt_selct_catgr"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="select a category for item"/>

       <!--     <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                app:ms_background_color="#3bbdfa"

                android:layout_marginTop="15dp"

                />-->



            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />



        </LinearLayout>
    </ScrollView>
//=========================================

    <Button
        android:id="@+id/id_fr_bt_upload_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="DONE "
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>


    <View
        android:id="@+id/touch_to_dismiss_bottom_sheet_dim_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="#9000"
        android:visibility="gone"/>


<LinearLayout
    android:elevation="30dp"
    android:id="@+id/id_fr_ll_bottom_sheet_container"
android:layout_width="match_parent"
android:layout_height="300dp"

app:behavior_hideable="true"
app:behavior_peekHeight="0dp"
android:orientation="vertical"
app:layout_behavior="@string/bottom_sheet_behavior"

    android:background="@color/colorSecondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/colorSecondary"
        android:padding="5dp"
android:animateLayoutChanges="true"
      >

            <ImageButton
                android:id="@+id/id_fr_bt_bottom_sheet_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"

                android:src="@drawable/back"
                android:background="@null"

                />


        <TextView
            android:id="@+id/id_br_bottom_sheet_tv_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Select a Category"
            android:textSize="22sp"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="@android:color/darker_gray"/>


<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >
    <LinearLayout
        android:id="@+id/id_fr_ll_bottom_sheet_list_items_container"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingBottom="10dp"
        >

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
</LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>