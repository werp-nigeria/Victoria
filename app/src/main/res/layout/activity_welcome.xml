<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">


    <TextView
        android:id="@+id/id_fr_tv_welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"
        android:text="welcome to AMO E-Commerce app"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_fr_tv_welcome_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Explore us"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:textStyle="bold|italic" />


    <Button
        android:id="@+id/id_fr_bt_login"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="128dp"
        android:background="#FFFFFF"
        android:elevation="30dp"
        android:text="     Log in     "
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/id_fr_bt_signup"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="78dp"
        android:background="#FFFFFF"
        android:elevation="0dp"
        android:text="   Sign up    "
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>
