<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:paddingRight="6dp"
    android:paddingLeft="6dp"
    android:paddingBottom="0dp"
    android:weightSum="3.8"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
     >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="3"

        android:elevation="20dp"
        card_view:cardCornerRadius="5dp">


        <ImageView
            android:id="@+id/id_iv_fR_rclr_item_ctgr_item_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"

          android:layout_marginTop="6dp"
            >
        <TextView

            android:id="@+id/id_tv_price_fR_rclr_item_ctgr_item_list"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"

            android:text="Rs .420"
            android:textColor="#A60C0C0C"
            android:autoSizeTextType="uniform"
android:layout_toLeftOf="@id/id_bt_save_fR_rclr_item_ctgr_item_list"
            android:ellipsize="end"
     />


        <ImageButton
            android:id="@+id/id_bt_save_fR_rclr_item_ctgr_item_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="30dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/like"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            />
        </RelativeLayout>

        <TextView

            android:id="@+id/id_tv_title_fR_rclr_item_ctgr_item_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:text="Title"
            android:textColor="#A60C0C0C"
            android:autoSizeTextType="uniform"
            android:layout_weight="1"

            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="2dp"/>



    </LinearLayout>


</LinearLayout>